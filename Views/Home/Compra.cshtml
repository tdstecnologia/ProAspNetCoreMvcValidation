@model Compra
@{ Layout = "_Layout"; }

@section scripts {
    <script src="~/jquery/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("input.input-validation-error").addClass("is-invalid");
        });
    </script>
}

<div class="bg-primary panel-body"><h2>Compra</h2></div>
<form class="panel-body" asp-action="Compra" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nome">Nome:</label>
        <div><span asp-validation-for="Nome" class="text-danger"></span></div>
        <input asp-for="Nome" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telefone">Telefone:</label>
        <div><span asp-validation-for="Telefone" class="text-danger"></span></div>
        <input asp-for="Telefone" type="tel" class="form-control" />
    </div>
    <span asp-validation-for="NumeroComWhatsApp" class="text-danger"></span>
    <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" asp-for="NumeroComWhatsApp">
        <label asp-for="NumeroComWhatsApp" class="custom-control-label">Número com WhatsApp</label>
        <div class="invalid-feedback">Example invalid feedback text</div>
    </div>
    <div class="form-group">
        <label asp-for="Quantidade">Quantidade:</label>
        <div><span asp-validation-for="Quantidade" class="text-danger"></span></div>
        <input asp-for="Quantidade" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mensagem">Mensagem:</label>
        <div><span asp-validation-for="Quantidade" class="text-danger"></span></div>
        <input asp-for="Mensagem" type="text" class="form-control" />
    </div>
    <label>Aceita os termos de entraga?</label>
    <div class="custom-control custom-radio">
        <input type="radio" asp-for="TermosEntrega" id="customRadio1" value="true" class="custom-control-input">
        <label class="custom-control-label" for="customRadio1">Sim</label>
    </div>
    <div class="custom-control custom-radio">
        <input type="radio" asp-for="TermosEntrega" id="customRadio2" value="false" class="custom-control-input">
        <label class="custom-control-label" for="customRadio2">Não</label>
    </div>
    <button type="submit" class="btn btn-primary">Registrar Contato</button>
</form>